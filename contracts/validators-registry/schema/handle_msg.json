{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "HandleMsg",
  "anyOf": [
    {
      "description": "Adds a validator to the registry",
      "type": "object",
      "required": [
        "add_validator"
      ],
      "properties": {
        "add_validator": {
          "type": "object",
          "required": [
            "validator"
          ],
          "properties": {
            "validator": {
              "$ref": "#/definitions/Validator"
            }
          }
        }
      }
    },
    {
      "description": "Remove a validator from the registry",
      "type": "object",
      "required": [
        "remove_validator"
      ],
      "properties": {
        "remove_validator": {
          "type": "object",
          "required": [
            "address"
          ],
          "properties": {
            "address": {
              "$ref": "#/definitions/HumanAddr"
            }
          }
        }
      }
    },
    {
      "description": "Update total_delegated field for validators in registry",
      "type": "object",
      "required": [
        "update_total_delegated"
      ],
      "properties": {
        "update_total_delegated": {
          "type": "object",
          "required": [
            "updated_validators"
          ],
          "properties": {
            "updated_validators": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Validator"
              }
            }
          }
        }
      }
    }
  ],
  "definitions": {
    "HumanAddr": {
      "type": "string"
    },
    "Uint128": {
      "type": "string"
    },
    "Validator": {
      "type": "object",
      "required": [
        "active",
        "address",
        "delegation_limit"
      ],
      "properties": {
        "active": {
          "type": "boolean"
        },
        "address": {
          "$ref": "#/definitions/HumanAddr"
        },
        "delegation_limit": {
          "$ref": "#/definitions/Uint128"
        },
        "total_delegated": {
          "default": "0",
          "allOf": [
            {
              "$ref": "#/definitions/Uint128"
            }
          ]
        }
      }
    }
  }
}
